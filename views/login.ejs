<%- include('partials/header') %> 

<div class="container form-section" id="main">
    <h2>Login</h2>
    <div class="row">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" class="form-control" name="username" placeholder="Ton email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Ton mot de passe" required>
            </div>
            <br>
            <button type="submit" class="w-100 btn btn-primary btn-lg">Login</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>