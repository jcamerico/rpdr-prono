<%- include('partials/header') %> 

<div class="container form-section" id="main">
    <h2>Register</h2>
    <div class="row">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" placeholder="Ton email pour le login" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Un mot de passe bien puissant" required>
            </div>
            <br>
            <button type="submit" class="w-100 btn btn-primary btn-lg">Register</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>